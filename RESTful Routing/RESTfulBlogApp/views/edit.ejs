<% include partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> <%/* METHOD SHOULD BE PUT, BUT NOT YET SUPPORTED BY HTML5 */%>
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>"></input>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>"></input>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
            
        </div>
        <button class="ui violet big basic button">Submit</button>
    </form>
</div>



<% include partials/footer %>